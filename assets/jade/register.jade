div#register-wrapper.animated.fadeIn(vertical-middle)

  div.wrapper
    div.register-panel.ui.center.aligned.segment
      div.ui.grid
        //- div.ui.one.column.row
        //-   div.column
        //-     h1 Chatroomjs.io
        //-     p
        //-       | super fast, super cool web messenger

        form(ng-submit="Register(username, password, disp_name)")
          //- disp_image field
          div.ui.one.column.row
            div.column
              div.image-uploader(
                nv-file-drop=""
                ng-file-over=""
                over-class="dragover"
                uploader="uploader"
                vertical-middle)

                h5(style="color: rgb(150,150,150)"
                  ng-show="uploader.queue.length === 0"
                  vertical-middle)
                  span Your picture here!
                div.image-preview(
                  ng-repeat="item in uploader.queue"
                  ng-thumb="{ file: item._file, height: 150 }")

          //- disp_name field
          div.ui.one.column.row
            div.column
              div.ui.labeled.input(
                ng-class="{ \
                  error: err.disp_name }")
                label.ui.label
                  i.chat.icon
                input(
                  ng-model="disp_name"
                  type="text"
                  placeholder="Displaying name..")
          //- username field
          div.ui.one.column.row
            div.column
              div.ui.labeled.input(
                ng-class="{ \
                  error: err.username }")
                label.ui.label
                  i.user.icon
                input(
                  ng-model="username"
                  type="text"
                  placeholder="Username..")
          //- password field
          div.ui.one.column.row
            div.column
              div.ui.labeled.input(
                ng-class="{ \
                  error: err.password }")
                label.ui.label
                  i.lock.icon
                input(
                  ng-model="password"
                  type="password"
                  placeholder="Password..")
          //- buttons field
          div.ui.one.column.row
            div.column
              button.ui.teal.button(type="submit")
                | Sign Up
              div.ui.horizontal.divider OR
              button.ui.ui.button(
                type="button"
                ng-click="Login()")
                | Registered ? Sign In
